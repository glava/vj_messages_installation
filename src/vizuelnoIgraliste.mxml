<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
					   xmlns:s="library://ns.adobe.com/flex/spark"
					   width="1024"
					   height="768"
					   xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:track="org.kisobran.track.*">
	
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayList;
			protected function button1_clickHandler(event:MouseEvent):void
			{
				multiple.startTracks();
				
			}
			protected function button1_clickHandlerSwitch(event:MouseEvent):void
			{
				multiple._twitterService.simulateNewTweets();
				
				
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<track:MultipleTracks id="multiple" skinClass="org.kisobran.track.skins.MultipleTracksSkin" width="100%" height="100%"/>
	<s:Button click="button1_clickHandler(event)" label="Start" bottom="0"/>
	<s:Button click="button1_clickHandlerSwitch(event)" label="Switch text" bottom="0" right="150"/>
</s:WindowedApplication>
